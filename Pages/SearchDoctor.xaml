                            VerticalOptions="Start"
                            WidthRequest="120" />

                        <StackLayout Margin="10,0,0,0">

                            <!--  Naziv Doktora  -->
                            <Label
                                Margin="-10,26,0,5"
                                Padding="0,0,0,0"
                                FontAttributes="Bold"
                                FontSize="20"
                                Text="Dr. Jasmin Fazlić"
                                TextColor="#333333" />

                            <!--  Specijalnost  -->
                            <Label
