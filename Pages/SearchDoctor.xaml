                                HeightRequest="18"
                                HorizontalOptions="Start"
                                WidthRequest="180">
                                <Frame
                                    BackgroundColor="#0EBE7F"
                                    BorderColor="Transparent"
                                    CornerRadius="1000"
                                    HeightRequest="10"
                                    WidthRequest="10" />
                                <Label
                                    Margin="2,0,0,0"
                                    FontSize="12"
                                    HorizontalTextAlignment="Center"
                                    Text="94%"
                                    TextColor="#677294"
                                    VerticalTextAlignment="Center" />

                            </FlexLayout>

                            <!--  Priče Pacijenata  -->
                            <FlexLayout
                                AlignItems="Center"
                                Direction="Row"
                                HeightRequest="18"
                                HorizontalOptions="Center"
                                WidthRequest="195">
                                <Frame
                                    Margin="26,-12,0,0"
                                    BackgroundColor="#0EBE7F"
                                    BorderColor="Transparent"
                                    CornerRadius="1000"
                                    HeightRequest="10"
                                    WidthRequest="10" />
                                <Label
                                    Margin="2,-12,0,0"
                                    FontSize="12"
                                    HorizontalTextAlignment="Center"
                                    Text="54"
                                    TextColor="#677294"
                                    VerticalTextAlignment="Center" />
                                <Label
                                    Margin="1,-12,0,0"
                                    FontSize="12"
                                    HorizontalTextAlignment="Center"
                                    Text="Priča Pacijenata"
                                    TextColor="#677294"
                                    VerticalTextAlignment="Center" />
                            </FlexLayout>

                            <!--  Radno Vrijeme  -->
                            <StackLayout>
                                <Label
                                    Margin="-140,10,0,0"
                                    FontAttributes="Bold"
                                    FontSize="13"
                                    Text="Sljedeća dostupnost"
                                    TextColor="#0EBE7F" />
                                <Label
                                    Margin="-140,0,0,0"
                                    FontSize="12"
                                    Text="10:00 Sutra"
                                    TextColor="#677294" />
                            </StackLayout>

                            <!--  Dugme  -->
                            <Button
                                Margin="0,-42,0,0"
                                Background="#0EBE7F"
                                FontAttributes="Bold"
                                FontSize="14"
                                Text="Rezerviši" />

                        </StackLayout>
                    </FlexLayout>
                </Frame>

                <!--  Buba Corelli  -->
