                    WidthRequest="370">
                    <FlexLayout AlignItems="Center" Direction="Row">

                        <!--  Slika Doktora  -->
                        <Image
                            Margin="0,-5,0,0"
                            HeightRequest="120"
                            HorizontalOptions="Start"
                            Source="bolnica.png"
                            VerticalOptions="Start"
                            WidthRequest="120" />

                        <StackLayout Margin="10,0,0,0">

                            <!--  Naziv Doktora  -->
                            <Label
                                Margin="-10,26,0,5"
                                Padding="0,0,0,0"
                                FontAttributes="Bold"
                                FontSize="20"
                                Text="Dr. Buba Corelli"
                                TextColor="#333333" />

                            <!--  Specijalnost  -->
                            <Label
                                Margin="-10,0,0,8"
                                FontSize="13"
                                Text="Ginekolog"
                                TextColor="#0EBE7F" />

                            <!--  Mjesto Posla  -->
                            <Label
                                Margin="-10,0,0,10"
                                FontSize="12"
                                Text="Stacionar"
                                TextColor="#677294" />

                            <!--  Recenzija Doktora  -->
                            <FlexLayout
                                Margin="-10,0,0,0"
                                AlignItems="Center"
                                Direction="Row"
                                HeightRequest="18"
                                HorizontalOptions="Start"
                                WidthRequest="180">
                                <Frame
                                    BackgroundColor="#0EBE7F"
                                    BorderColor="Transparent"
                                    CornerRadius="1000"
                                    HeightRequest="10"
                                    WidthRequest="10" />
                                <Label
                                    Margin="2,0,0,0"
                                    FontSize="12"
                                    HorizontalTextAlignment="Center"
                                    Text="90%"
                                    TextColor="#677294"
                                    VerticalTextAlignment="Center" />

                            </FlexLayout>

                            <!--  Priče Pacijenata  -->
                            <FlexLayout
                                AlignItems="Center"
                                Direction="Row"
                                HeightRequest="18"
                                HorizontalOptions="Center"
                                WidthRequest="195">
                                <Frame
                                    Margin="26,-12,0,0"
                                    BackgroundColor="#0EBE7F"
                                    BorderColor="Transparent"
                                    CornerRadius="1000"
                                    HeightRequest="10"
                                    WidthRequest="10" />
                                <Label
                                    Margin="2,-12,0,0"
                                    FontSize="12"
                                    HorizontalTextAlignment="Center"
                                    Text="400+"
                                    TextColor="#677294"
                                    VerticalTextAlignment="Center" />
                                <Label
                                    Margin="1,-12,0,0"
                                    FontSize="12"
                                    HorizontalTextAlignment="Center"
                                    Text="Priča Pacijenata"
                                    TextColor="#677294"
                                    VerticalTextAlignment="Center" />
                            </FlexLayout>

                            <!--  Radno Vrijeme  -->
                            <StackLayout>
                                <Label
                                    Margin="-140,10,0,0"
                                    FontAttributes="Bold"
                                    FontSize="13"
                                    Text="Sljedeća dostupnost"
                                    TextColor="#0EBE7F" />
                                <Label
                                    Margin="-140,0,0,0"
                                    FontSize="12"
                                    Text="15:00 Prekosutra"
                                    TextColor="#677294" />
                            </StackLayout>

                            <!--  Dugme  -->
                            <Button
                                Margin="0,-42,0,0"
                                Background="#0EBE7F"
                                FontAttributes="Bold"
                                FontSize="14"
                                Text="Rezerviši" />

                        </StackLayout>
                    </FlexLayout>
                </Frame>

                <!--  Dino Merlin  -->
                <Frame
                    Padding="12,-30,20,0"
                    BackgroundColor="#FFFFFF"
                    BorderColor="Transparent"
                    CornerRadius="8"
                    HasShadow="True"
                    HeightRequest="190"
                    WidthRequest="370">
                    <FlexLayout AlignItems="Center" Direction="Row">

                        <!--  Slika Doktora  -->
                        <Image
                            Margin="0,-5,0,0"
                            HeightRequest="120"
                            HorizontalOptions="Start"
                            Source="bolnica.png"
                            VerticalOptions="Start"
                            WidthRequest="120" />

                        <StackLayout Margin="10,0,0,0">

                            <!--  Naziv Doktora  -->
                            <Label
                                Margin="-10,26,0,5"
                                Padding="0,0,0,0"
                                FontAttributes="Bold"
                                FontSize="20"
                                Text="Dr. Dino Merlin"
                                TextColor="#333333" />

                            <!--  Specijalnost  -->
                            <Label
                                Margin="-10,0,0,8"
                                FontSize="13"
                                Text="Hirurg (Mađioničar)"
                                TextColor="#0EBE7F" />

                            <!--  Mjesto Posla  -->
                            <Label
                                Margin="-10,0,0,10"
                                FontSize="12"
                                Text="NOVA Poliklinika"
                                TextColor="#677294" />

                            <!--  Recenzija Doktora  -->
                            <FlexLayout
                                Margin="-10,0,0,0"
                                AlignItems="Center"
                                Direction="Row"
                                HeightRequest="18"
                                HorizontalOptions="Start"
                                WidthRequest="180">
                                <Frame
                                    BackgroundColor="#0EBE7F"
                                    BorderColor="Transparent"
                                    CornerRadius="1000"
                                    HeightRequest="10"
                                    WidthRequest="10" />
                                <Label
                                    Margin="2,0,0,0"
                                    FontSize="12"
                                    HorizontalTextAlignment="Center"
                                    Text="80%"
                                    TextColor="#677294"
                                    VerticalTextAlignment="Center" />

                            </FlexLayout>

                            <!--  Priče Pacijenata  -->
                            <FlexLayout
                                AlignItems="Center"
                                Direction="Row"
                                HeightRequest="18"
                                HorizontalOptions="Center"
                                WidthRequest="195">
                                <Frame
                                    Margin="26,-12,0,0"
                                    BackgroundColor="#0EBE7F"
                                    BorderColor="Transparent"
                                    CornerRadius="1000"
                                    HeightRequest="10"
                                    WidthRequest="10" />
                                <Label
                                    Margin="2,-12,0,0"
                                    FontSize="12"
                                    HorizontalTextAlignment="Center"
                                    Text="75"
                                    TextColor="#677294"
                                    VerticalTextAlignment="Center" />
                                <Label
                                    Margin="1,-12,0,0"
                                    FontSize="12"
                                    HorizontalTextAlignment="Center"
                                    Text="Priča Pacijenata"
                                    TextColor="#677294"
                                    VerticalTextAlignment="Center" />
                            </FlexLayout>

                            <!--  Radno Vrijeme  -->
                            <StackLayout>
                                <Label
                                    Margin="-140,10,0,0"
                                    FontAttributes="Bold"
                                    FontSize="13"
                                    Text="Sljedeća dostupnost"
                                    TextColor="#0EBE7F" />
                                <Label
                                    Margin="-140,0,0,0"
                                    FontSize="12"
                                    Text="09:00 Sutra"
                                    TextColor="#677294" />
                            </StackLayout>

                            <!--  Dugme  -->
                            <Button
                                Margin="0,-42,0,0"
                                Background="#0EBE7F"
                                FontAttributes="Bold"
                                FontSize="14"
                                Text="Rezerviši" />

                        </StackLayout>
                    </FlexLayout>
                </Frame>

            </FlexLayout>

        </StackLayout>
    </ScrollView>
</ContentPage>